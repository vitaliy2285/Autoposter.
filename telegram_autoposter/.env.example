# Telegram Bot Token from @BotFather
BOT_TOKEN=

# Telegram user IDs with full admin access (comma-separated)
ADMIN_IDS=123456789

# OpenAI-compatible API settings
OPENAI_URL=https://api.openai.com/v1
OPENAI_KEY=
TEXT_MODEL=gpt-5.2
PROMPT_MODEL=gpt-5.2

# Content defaults
TOPIC=дизайн интерьера
TONE=экспертный
MOOD=утренний
POSTING_TIMES=09:00,15:00,21:00
TELEGRAM_CHANNEL=@your_channel
