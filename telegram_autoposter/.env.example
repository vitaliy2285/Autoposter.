KANDINSKY_API_KEY=
KANDINSKY_SECRET_KEY=
KANDINSKY_EMAIL=
KANDINSKY_PASSWORD=

# Kandinsky generation settings
KANDINSKY_STYLE=DEFAULT
KANDINSKY_WIDTH=1024
